pipeline {
    agent {
        docker {
            image 'node:18'
            args '-u root:root'
        }
    }

    environment {
        FIREBASE_TOKEN = credentials('FIREBASE_TOKEN')
    }

    options {
        skipDefaultCheckout()
        timestamps()
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Mokhaled2004/jenkins.git'
            }
        }

        stage('Debug: Check Workspace Files') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }

        stage('Install Firebase CLI') {
            steps {
                sh 'npm install -g firebase-tools'
                sh 'firebase --version'
            }
        }

        stage('Debug: Check Firebase CLI Location') {
            steps {
                sh 'which firebase'
            }
        }

        stage('Debug: Check Credential Exists') {
            steps {
                script {
                    sh 'echo "Firebase token length: ${#FIREBASE_TOKEN}"'
                }
            }
        }

        stage('Firebase Auth Test') {
            steps {
                sh 'firebase logout || true'
                sh 'firebase login:ci --token "$FIREBASE_TOKEN"'
            }
        }

        stage('Deploy to Firebase Hosting') {
            steps {
                sh 'firebase deploy --only hosting --force --debug --token "$FIREBASE_TOKEN"'
            }
        }
    }

    post {
        success {
            echo "ðŸ”¥ Deployment successful!"
        }
        failure {
            echo "ðŸ’€ Deployment failed â€” check logs!"
        }
    }
}
