pipeline {
    agent {
        docker {
            image 'node:18'
            args '-u root:root'
        }
    }

    environment {
        FIREBASE_TOKEN = credentials('FIREBASE_TOKEN')
    }

    options {
        skipDefaultCheckout() // we’ll do explicit checkout
        timestamps()
    }

    stages {
        stage('Clean Workspace') {
            steps {
                deleteDir() // Optional if you want a fresh start
            }
        }

        stage('Checkout / Pull Changes') {
            steps {
                script {
                    // If .git exists, pull; else clone
                    if (fileExists('.git')) {
                        sh 'git reset --hard'
                        sh 'git clean -fd'
                        sh 'git pull origin main'
                    } else {
                        sh 'git clone https://github.com/Mokhaled2004/jenkins.git .'
                    }
                }
            }
        }

        stage('List Files') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }

        stage('Install Firebase Tools') {
            steps {
                sh 'npm install -g firebase-tools'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npx firebase deploy --only hosting --force --debug'
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
